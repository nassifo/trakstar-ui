<Window x:Class="TrakstarGUI.RealTimeDemoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrakstarGUI"
        mc:Ignorable="d"
        Name="TrakstarUIWindow"
        xmlns:ChartDirector="clr-namespace:ChartDirector;assembly=netchartdir" UseLayoutRounding="True"
        Title="Trakstar" ResizeMode="CanResize" Loaded="Window_Loaded"
        >
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <MenuItem Header="_Open" />
                <MenuItem Header="_Close"/>
                <MenuItem Header="_Save"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Info"/>
            </MenuItem>
        </Menu>
        <StackPanel DockPanel.Dock="Left" Width="150" Background="#FFF0F0F0">
            <RadioButton x:Name="runPB" Style="{StaticResource {x:Type ToggleButton}}" HorizontalContentAlignment="Center" 
                         Checked="runPB_CheckedChanged" Unchecked="runPB_CheckedChanged" Margin="37,10,37,5">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Run" FontWeight="Bold"/>
                </StackPanel>
            </RadioButton>
            <RadioButton x:Name="freezePB" Style="{StaticResource {x:Type ToggleButton}}" HorizontalContentAlignment="Center" Margin="37,5,37,5">
                <StackPanel Orientation="Horizontal" Margin="5">
                    <TextBlock Text="Pause" FontWeight="Bold"/>
                </StackPanel>
            </RadioButton>
            <TextBlock Text="Sampling Rate (ms)" Margin="5,30,0,0" FontWeight="Bold" />
            <ComboBox x:Name="samplePeriod" Margin="3" SelectionChanged="samplePeriod_SelectionChanged">
                <ComboBoxItem>10</ComboBoxItem>
                <ComboBoxItem IsSelected="True">17</ComboBoxItem>
            </ComboBox>
            <TextBlock Text="Sensors" Margin="3,30,0,1" FontWeight="Bold" />
        </StackPanel>
        <ChartDirector:WPFChartViewer x:Name="SensorDataChart" Margin="5" ViewPortChanged="SensorDataChart_ViewPortChanged" />
    </DockPanel>
</Window>